<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    <form onsubmit='' action="/api/upload" method="post" enctype="multipart/form-data">
        <input type='file' name="file"/>
        <button type='submit'>Submit</button>
    </form>
    <div>
        <h1>Upload file</h1>
    </div>
    <script>
        document.querySelector('input').addEventListener('change',(e)=>{
            const ext = e.target.value.split(".");
            if(ext[1]==="xlsx"||ext[1]==="xls"){
                document.querySelector('h1').innerText = 'Valid';
            }
            else{
                document.querySelector('h1').innerText = 'Invalid';
            }
        })
    </script>
</body>
</html>